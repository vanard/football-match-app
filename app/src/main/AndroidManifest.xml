<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.acdicoding.vianrd.footballfinalsub">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.detail.detail_match.DetailMatchActivity">
        </activity>
        <activity android:name=".view.detail.detail_team.DetailTeamActivity" android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".view.detail.detail_team.players.detail_player.DetailPlayerActivity">
        </activity>
    </application>

</manifest>